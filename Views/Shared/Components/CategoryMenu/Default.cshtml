@model IEnumerable<Category>

    <h3 class="my-4">Kategoriler</h3>
    <div class="list-group">
        <a href="/Home/Index" class="list-group-item list-group-item-action">Tüm Kategoriler</a>
        @foreach (var item in Model)
        {
            <a asp-controller="Home" asp-action="Index" asp-route-Id="@item.CategoryId" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==item.CategoryId.ToString()?"active":"")">@item.Name</a>
        }
    </div>
