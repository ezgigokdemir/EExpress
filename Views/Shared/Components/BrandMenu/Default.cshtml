@model IEnumerable<Brand>

<h4 class="my-4">Markalar</h4>
<div class="list-group">
    <a href="/Home/Index" class="list-group-item list-group-item-action">Tüm Markalar</a>
    @foreach (var item in Model)
    {
        <a asp-controller="Home" asp-action="Index" @*asp-route-Id="@item.BrandId" *@ asp-route-data="@item.BrandId" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==item.BrandId.ToString()?"active":"")">@item.Name</a>
    }
</div>
