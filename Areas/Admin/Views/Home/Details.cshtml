@model Product
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row p-4">
    <div class="col-md-4">
        <img class="img-fluid" src="~/images/@Model.imageUrl" alt="" style="width:340px;height:300px">
    </div>
    <div class="col-md-6">
        <h3 class="my-3">Ürün Açıklaması</h3>
        <p>@Model.Description</p>
        <h3 class="my-3">Ürün Detayları</h3>
        <ul>
            <li>@Model.Name</li>
            <li>@Model.Price TL</li>
            <li>@Model.isActive</li>
        </ul>
    </div>
</div>
