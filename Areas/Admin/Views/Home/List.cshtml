@model EExpress.ViewModel.HomePageViewModel

<table class="table table-striped table-borderless mt-4">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Resim</th>
            <th>Durum</th>
            <th>Marka</th>
            <th>Kategori</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td style="max-width:120px">@item.Name</td>
                <td style="max-width:30px">@item.Description</td>
                <td>@item.Price</td>
                <td>
                    <img src="~/images/@item.imageUrl" alt="productImage" style="width:50px;height:50px" />
                </td>
                <td>@item.isActive</td>
                <td>@item.BrandId</td>
                <td>@item.CategoryId</td>
                <td>
                    <a asp-action="Details" asp-controller="Home" asp-area="Admin" asp-route-Id="@item.Id"><i class="fas fa-info-circle"></i> | </a>
                    <a asp-action="Edit" asp-controller="Home" asp-area="Admin" asp-route-Id="@item.Id"><i class="fas fa-edit"></i> | </a>
                    <a asp-action="Delete" asp-controller="Home" asp-area="Admin" asp-route-Id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>